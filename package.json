{
  "name": "oslomet-wiki",
  "version": "1.0.0",
  "description": "A wiki for OsloMet courses, by and for students.",
  "type": "module",
  "main": "dist/app.js",
  "scripts": {
    "dev": "tsx src/app.ts",
    "test": "node --test ./test/**/*.test.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "introspect-db": "kysely-codegen --out-file ./src/db/types.ts",
    "migrate": "tsx src/db/migrate.ts && npm run introspect-db"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MrProgrammerMan/le_epic_project.git"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^24.5.0",
    "@types/pg": "^8.15.5",
    "kysely-codegen": "^0.19.0",
    "pg": "^8.16.3",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2"
  },
  "bugs": {
    "url": "https://github.com/MrProgrammerMan/le_epic_project/issues"
  },
  "homepage": "https://github.com/MrProgrammerMan/le_epic_project#readme",
  "dependencies": {
    "@fastify/static": "^8.2.0",
    "dotenv": "^17.2.2",
    "fastify": "^5.6.0",
    "kysely": "^0.28.7"
  }
}
